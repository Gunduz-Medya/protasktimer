{
    "manifest_version": 3,
    "name": "ProTaskTimer",
    "version": "1.0",
    "description": "A task-based time tracking Chrome extension.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage"
    ]
}